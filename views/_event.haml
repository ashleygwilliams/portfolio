-if @event["img"]
  %img.img-polaroid{:src=>"/img/#{@event["img"]}"}
%a{:href=>"#{@event["url"]}"}
  %h3
    = @event["name"]
%h4
  = @event["date"]
.event_desc
  %em
    = @event["desc"]
.role
  %h5 My role:
  = @event["role"]
- if @event["press"]
  %h5 Press:
  %ul
    - @event["press"].each do |source, url|
      %li
        %a{:href=>"#{url}"}
          = source